{
  "install": "dotnet restore",
  "start": "dotnet run --ASPNETCORE_ENVIRONMENT Development",
  "watch": {
    "install": {
      "include": [
        "^glitch\\.json$",
        "^Website\\.csproj$",
        "^install\\.sh$",
        "^\\.env$"
      ]
    },
    "restart": {
      "exclude": [
        "^Views/",
        "^wwwroot/"
      ],
      "include": [
        "\\.rkt$",
        "\\.scm$"
      ]
    },
    "throttle": 1000
  }
}